CC = cc

FLAGS = -Wall -Wextra -Werror

SRC		=	${wildcard *.c}

OBJ		=	${SRC:.c=.o}

all: 
	${CC} ${FLAGS} -D BUFFER_SIZE=4 ${SRC}
	@ ./a.out
	@ rm a.out